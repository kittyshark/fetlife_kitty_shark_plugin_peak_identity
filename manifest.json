{
    "manifest_version": 3,
    "name": "FetLife Age Adder",
    "version": "1.0",
    "description": "Adds age to usernames in FetLife notifications",
    "host_permissions": [
        "https://fetlife.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://fetlife.com/*"],
        "js": ["content.js"]
    }],
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
